<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lbkomunitas.EditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <fragment
                android:id="@+id/Fragment1"
                android:name="com.example.lbkomunitas.Fragment1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="14sp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextNamaa"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:ems="15"
                android:gravity="top|left"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextEmaila"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:ems="15"
                android:gravity="top|left"
                android:inputType="textEmailAddress"
                android:text="" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="14sp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextAlamata"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:ems="15"
                android:gravity="top|left"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No HP"
                android:textSize="14sp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextNohpa"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:ems="15"
                android:gravity="top|left"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biografi"
                android:textSize="14sp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextBiografia"
                android:layout_width="324dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:ems="15"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:text="" />

            <!--
            <TextView
                android:id="@+id/textView2"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:text="Password"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:ems="15"
                android:gravity="top|left"
                android:inputType="textPassword"
                android:text="" /> -->

            <Button
                android:id="@+id/daftarsimpan"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:gravity="top"
                android:text="Simpan"
                android:onClick="nTmbUser"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="top"
            android:paddingTop="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/BlueGrey50"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            
            <fragment
                android:id="@+id/Fragment2"
                android:name="com.example.lbkomunitas.Fragment2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>